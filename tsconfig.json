{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,  // Disable the main strict flag
    "noImplicitAny": false, // Disable individual strict checks
    "strictNullChecks": false, // Disable individual strict checks
    "strictFunctionTypes": false, // Disable individual strict checks
    "strictPropertyInitialization": false, // Disable individual strict checks
    "noImplicitThis": false, // Disable individual strict checks
    "alwaysStrict": false, // Disable individual strict checks
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
